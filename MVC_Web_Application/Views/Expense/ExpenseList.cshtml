@model IEnumerable<Expense>
@{
    ViewData["Title"] = "ExpenseList";
}

<h1>ExpenseList</h1>

<a class="btn btn-success float-end" asp-controller="Expense" asp-action="CreateExpense" ><i class="bi bi-plus"></i>Add Expense</a>
<div class="table-responsive-sm">
    <table class="table table-striped table-hover table-bordered ">
        <thead>
            <tr>
                <th>Expense Id</th>
                <th>Expense Name</th>
                <th>Category</th>
                <th>Expense Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count() > 0)
            { 
                @foreach(var item in Model)
                {
                <tr>
                    <td>@item.ExpenseId</td>
                    <td>@item.ExpenseName</td>
                    <td>@item.ExpenseCategory.CategoryName</td>
                    <td>@item.ExpenseAmount</td>
                    <td>
                        <span>
                            <a class="btn btn-primary mx-1" asp-controller="Expense" asp-action="Update" asp-route-id="@item.ExpenseId"><i class="bi bi-pencil"></i>Edit</a>
                            <a class="btn btn-danger mx-1" asp-controller="Expense" asp-action="Delete" asp-route-id="@item.ExpenseId"><i class="bi bi-trash"></i>Delete</a>
                        </span>
                    </td>
                </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-danger align-items-center" tabindex="9">No records found</td>
                </tr>
              
            }
        </tbody>
    </table>  
</div>

