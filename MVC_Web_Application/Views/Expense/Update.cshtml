@model MVC_Web_Application.Models.Expense

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<div asp-validation-summary="ModelOnly"></div>

<div class="container-fluid">
    <form method="post" asp-action="CreateExpense">

        <div class="overflow-hidden"></div>
        <div class="row">
            <div class="col-sm-6">
                <label for="expensename" class="form-label">Expense Name</label>
                <input type="text" id="expensename" class="form-control" asp-for="ExpenseName">
                <span asp-validation-for="ExpenseName" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label for="amount" class="form-label">Amount</label>
                <input type="text" id="amount" class="form-control" asp-for="ExpenseAmount">
                <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
            </div>
        </div>

        <input class="btn btn-success mx-1 mt-2" type="submit" asp-action="Update" asp-controller="Expense" asp-route-id="@Model" value="Add" /> <a class="btn btn-danger mx-1 mt-2" asp-action="ExpenseList" asp-controller="Expense">Cancel</a>
    </form>


</div>


@section scripts{ 
<partial name="_ValidationScriptsPartial.cshtml" />
}