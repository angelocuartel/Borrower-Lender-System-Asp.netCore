@model IEnumerable<Item>

@{
    ViewData["Title"] = "Index";
}



<h1>Items</h1>

<div class="container">


    <div class=" table-responsive-sm">
        <a class="btn btn-success float-end" type="submit" asp-controller="Item" asp-action="CreateItem">Add New Item</a>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Borrower</th>
                    <th>Lender</th>
                    <th>Item Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Borrower</td>
                        <td>@item.Lender</td>
                        <td>@item.ItemName</td>
                        <td class="d-inline-block">
                            <a class="btn btn-primary mx-1"asp-controller="Item" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil mx-1"></i>Edit</a>
                            <a  class="btn btn-danger mx-1" asp-controller="Item" asp-action="DeleteItem" asp-route-id="@item.Id"><i class="bi bi-trash mx-1" ></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

 





